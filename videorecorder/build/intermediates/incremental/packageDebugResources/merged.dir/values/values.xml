    <string name="app_name">videorecorder</string>
    <string name="delete">删除</string>
    <string name="music_empty">空空如也</string>
    <string name="music_loading">正在加载本地音乐...</string>
    <style name="ConfirmDialogStyle" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="windowMinWidthMinor">90%</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="colorAccent">#0accac</item>
    </style>
    <style name="CustomEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorGray4</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>
    <style name="RecordActivityTheme" parent="RecordStyle">
        <item name="nextIcon">@drawable/drawable_ugc_green_next</item>
        <item name="recordButtonTapModeInnerBackground">@color/colorAccent</item>
        <item name="ugckitColorPrimary">@color/colorAccent</item>
        <item name="beautyPanelColorPrimary">@color/colorAccent</item>
    </style>
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <declare-styleable name="TCActivityTitle">
        <!-- 标题文案 -->
        <attr format="string" name="titleText"/>
        <!-- 是否有back按钮 -->
        <attr format="boolean" name="canBack"/>
        <!-- back按钮文案 -->
        <attr format="string" name="backText"/>
        <!-- 右侧更多功能按钮文字 -->
        <attr format="string" name="moreText"/>
    </declare-styleable>
</resources>